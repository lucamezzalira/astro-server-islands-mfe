---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Observability Dashboard with Astro Server Islands" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="header">
			<div class="container">
				<h1>Observability Dashboard</h1>
				<div class="header-info">
					<span>Astro Server Islands</span>
					<span>Micro-frontends</span>
				</div>
			</div>
		</header>
		
		<main class="container">
			<slot />
		</main>

		<footer class="footer">
			<div class="container">
				<p>Observability Dashboard PoC - Astro Server Islands | Micro-frontends</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem); 
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
		--color-primary: #3730a3;
		--color-secondary: #818cf8;
		--color-text: #1e293b;
		--color-text-light: #64748b;
		--color-background: #f8fafc;
		--color-border: #e2e8f0;
		--color-success: #10b981;
		--color-warning: #f59e0b;
		--color-danger: #ef4444;
	}

	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-background);
		line-height: 1.5;
	}

	.container {
		width: 100%;
		max-width: 90%;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.header, .footer {
		background-color: var(--color-primary);
		color: white;
		padding: 1rem 0;
	}

	.header {
		margin-bottom: 2rem;
	}

	.header .container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.header-info {
		display: flex;
		gap: 1rem;
	}

	.header-info span {
		background-color: var(--color-secondary);
		padding: 0.25rem 0.5rem;
		border-radius: 4px;
		font-size: 0.875rem;
	}

	.footer {
		margin-top: 2rem;
		padding: 1.5rem 0;
		text-align: center;
	}

	h1 {
		font-size: var(--font-size-xl);
	}

	h2 {
		font-size: var(--font-size-lg);
	}

	main {
		min-height: calc(100vh - 200px);
	}
</style>
